<%include ./partials/header%>

<div class="ui main text container segment">
    <div class="ui huge header">New Blog</div>
    <form action="/blogs" class="ui form" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" placeholder="blog title" name="blog[title]" required>
        </div>
        <div class="field">
            <label>Image</label>
            <!--default mage wont show up since the form submission replaces the image src with blank-->
            <input type="text" placeholder="image url" name="blog[image]" required>
        </div>
        <div class="field">
            <label>Content</label>
            <textarea name="blog[body]" required></textarea>
        </div>
        <input class="ui green big basic button" type="submit">
        <a class="ui black big basic button" href="/blogs">Cancel</a>
    </form>

</div>

<%include ./partials/footer%>